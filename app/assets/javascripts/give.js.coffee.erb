$("#stripebutton").click ->
  token = (res) ->
    $input = $("<input type=hidden name=stripeToken />").val(res.id)
    $("form").append($input).submit()

  StripeCheckout.open
    key: "<%= ENV['STRIPE_PUBLIC_KEY'] %>"
    amount: $('#amount').val
    currency: "usd"
    name: "TMCYF"
    description: "Your Donation"
    panelLabel: "Pay"
    token: token

  false