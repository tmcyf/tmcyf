<% provide(:title, 'Edit payments') %>
<div class="row">
  <%= render 'layouts/account_menu' %>
  <div class="large-9 columns">
    <fieldset class="fields">
      <div class="large-12 columns">
        <h1>Payments</h1>

        <table>
          <thead>
            <tr>
              <th>Payment</th>
              <th>Amount</th>
              <th></th>
              <% if current_admin %>
                <th>Edit Payment</th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% @payments.each do |payment| %>
              <tr>
                <td><%= payment.description %></td>
                <td><%= number_to_currency(payment.amount.to_f / 100) %></td>
                <td></td>
              <% if current_admin %>
                <td><%= link_to "Edit payment", edit_payment_path(payment) %></td>
              <% end %>

              </tr>
            <% end %>
            <% @payments.each do |payment| %>
              <tr>
                <td><%= payment.description %></td>
                <td><%= number_to_currency(payment.amount.to_f / 100) %></td>
                <td>Paid!</td>
              <% if current_admin %>
                <td><%= link_to "Edit payment", edit_payment_path(payment) %></td>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="surcharge-note">Note: there is a small convenience fee which will be added to the total.</div>
      </div>
    </fieldset>
  </div>
</div>

