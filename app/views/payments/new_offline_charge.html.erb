<%= form_for @charge, url: create_offline_charge_path do |f| %>
  <%= f.label :user %>
  <%= f.collection_select :user_id, User.all, :id, :fullname, prompt: true %>
  <%= f.label :payment %>
  <%= f.collection_select :payment_id, Payment.all, # TODO: scope to user
                          :id, :description, prompt: true %>
  <%= f.submit "Record charge" %>
<% end %>
