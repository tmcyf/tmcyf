<% provide(:title, 'Login') %>
<div class="row">
	<div class="large-12 columns">
		<fieldset>
			<div class="large-12 columns">
				<h2>Login</h2>
				<%= simple_form_for(resource, :as => resource_name, :url => login_path) do |f| %>
				<div class="row">
	  			<div class="large-4 columns">
	    			<%= f.input :email, required: false, autofocus: false %>
	    		</div>
	    		<div class="large-3 pull-5 columns">
	    			<%= f.input :password, required: false %>
	    		</div>
	    	</div>
	    	<%= f.input :remember_me, as: :boolean, boolean_style: :inline if devise_mapping.rememberable? %>
	    	<%= f.button :submit, "Sign in" %>
	    	<div>
	    		<%= render "devise/shared/links" %>
	    	</div>
	    </div>
			<% end %>
		</fieldset>
	</div>
</div>