<% provide(:title, 'Edit password') %>
<div class="row">
	<div class="large-12 columns">
		<fieldset>
			<div class="large-12 columns">
				<h2>Change your password</h2>
				<%= form_for(resource, :as => resource_name, :url => reset_path, :html => { :method => :put }) do |f| %><%= devise_error_messages! %><%= f.hidden_field :reset_password_token %>
				<div class="row">
					<div class="large-4 columns"><%= f.label :password, "New password" %>
  					<%= f.password_field :password, :autofocus => true %></div>
  			</div>
  			<div class="row">
					<div class="large-4 columns"><%= f.label :password_confirmation, "Confirm new password" %>
  					<%= f.password_field :password_confirmation %></div>
  			</div>
  			<div class="row">
					<div class="large-4 columns"><%= f.submit "Change my password" %></div>
				</div>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</fieldset>
	</div>
</div>