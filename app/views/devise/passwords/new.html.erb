<div class="row">
	<div class="large-12 columns">
		<fieldset>
			<div class="large-12 columns">
				<h2>Forgot your password?</h2>
				<%= form_for(resource, :as => resource_name, :url => reset_path, :html => { :method => :post }) do |f| %><%= devise_error_messages! %>
				<div class="row">
				  <div class="large-4 columns"><%= f.label :email %>
				  	<%= f.email_field :email, :autofocus => true %></div>
				</div>
				<div class="row">
				  <div class="large-4 columns">
				  	<%= f.submit "Send me reset password instructions" %></div>
				</div>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</fieldset>
	</div>
</div>


