<%= form_for(@event) do |f| %>
  <ul>
  <% @event.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <div class="row">
	  <div class="large-4 columns">
	    <%= f.label :title %><br />
	    <%= f.text_field :title %>
	  </div>
	</div>
	<div class="row">
	  <div class="large-4 columns">
	    <%= f.label :date %><br />
	    <%= f.date_field :date %>
	  </div>
	  <div class="large-4 columns">
	    <%= f.label :time %><br />
	    <%= f.time_field :time %>
	  </div>
	  <div class="large-4 columns">
	    <%= f.label :location %><br />
	    <%= f.text_area :location %>
	  </div>
	</div>
	<div class="row">	  	  		  
	  <div class="large-12 columns">
	    <%= f.label :body %><br />
	    <%= f.text_area :body %>
	  </div>
	</div>
  <div>
    <%= f.submit %>
  </div>
<% end %>