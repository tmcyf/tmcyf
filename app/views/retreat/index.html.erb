<% provide(:title, 'Lighted to Lighten | Retreat 2015') %>
<div class="yf-retreat-header-block">
  <div class="row">
    <div class="large-12 columns">
      <img src="http://d3krmhcqjnbsob.cloudfront.net/retreat/header.png" />
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="yf-retreat-heading center">
        <h1>January 15th - 17th<br>Carolina Creek Camp <span>&#183;</span> Huntsville, TX</h1>
      </div>
    </div>
  </div>
</div>
<hr />
<div class="yf-retreat-schedule-block center">
  <h1>Schedule</h1>
  <h4>- TBA -</h4>
</div>
<hr />
<div class="yf-retreat-form-block">
  <h1 class="center">Registration Form</h1>
  <%= render 'form' %>
</div>
<hr />
<div class="yf-retreat-payment-block center">
<h1>Payment</h1>
<%= form_tag retreat_charge_path do %>
    <label class="amount">
      <h5>Amount: $90</h5>
      <p>Please use the same email as on the registration form!<br><em>There will be a convenience charge of $3 applied.<em></p>
    </label>
    <script
      src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key=<%= ENV['STRIPE_PUBLIC_KEY'] %>
      data-image="http://d3krmhcqjnbsob.cloudfront.net/sitelogo.png"
      data-name="Retreat 2015: Lighted to Lighten"
      data-description="1 golden ticket ($93.00)"
      data-amount="9300">
    </script>
  <% end %>
</div>
