<div class="row">
	<div class="large-12 columns">
		<%= image_tag @event.image_url.to_s, class: "show-page-image" %>
		<div class="large-12 columns">
			<h3 class="show-page-title"><%= @event.title %></h3>
		</div>
		<div class="row">
			<div class="large-12 columns">
				<div class="large-6 large-centered columns show-page-eventdata">
					<date class="show-page-date"><%= @event.date.strftime("%B %e, %Y") %></date>
					| 
					<time class="show-page-time"><%= @event.time.strftime("%I:%M %p") %></time>
					<p><%=raw @event.location %></p>
				</div>
			</div>
			<div class="large-1 large-centered columns">
				<hr />
			</div>		
		</div>
		<p class="show-page-body"><%= @event.body%></p>
		<div class="large-3 large-centered columns">
			<hr />
		</div>
		<p class="ics">{ ICS Placeholder }</p>

		<%= link_to 'Back to Events', events_path %><br>
		<%#= link_to "edit", edit_event_path(@event) %>
		<%#= link_to "delete", event_path(@event), method: :delete, confirm: "You sure?" %>
	</div>
</div>