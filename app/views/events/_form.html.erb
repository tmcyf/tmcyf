<div class="row">
  <div class="large-12 columns">
    <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="large-4">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="row">
        <%= f.label :date %><br>
        <%= f.date_select :date %>
      </div>
      <div class="row">
        <%= f.label :time %><br>
        <%= f.time_select :time, ampm: true %>
      </div>
      <div class="row">
        <div class="large-4">
          <%= f.label :location %><br>
          <%= f.text_field :location %>
        </div>
      </div>
      <div class="row">
        <div class="large-6">
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </div>
      </div>  
      <div class="row">
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>
      <div class="row">
        <%= f.label :cost %><br>
        <%= f.text_field :cost %>
      </div>      
      <div class="row">
        <div class="large-5">
          <%= f.label :remote_image_url, "or image URL" %><br>
          <%= f.text_field :remote_image_url %>
        </div>
      </div>  
      <div class="row">
        <div class="actions">
          <%= f.submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
